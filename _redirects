# Netlify redirects file
# Remove .html extension from URLs
# Order matters: more specific rules first

# Rewrite clean URLs to .html files (200 = rewrite, not redirect)
/ /index.html 200
/about /about.html 200
/services /services.html 200
/projects /projects.html 200
/faq /faq.html 200
/contact /contact.html 200

# Redirect old .html URLs to clean URLs (301 = permanent redirect)
/index.html / 301
/about.html /about 301
/services.html /services 301
/projects.html /projects 301
/faq.html /faq 301
/contact.html /contact 301
